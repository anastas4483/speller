{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "jsx": "react",
    /* Bundler mode */
    "baseUrl": ".",
    "outDir": "./dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    /* Linting */
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "vite-env-override.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
}